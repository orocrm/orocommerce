{% extends '@OroAction/Operation/form.html.twig' %}

{% form_theme form with ['@OroFrontend/layouts/default/form_theme.html.twig', '@OroCheckout/Action/fields.html.twig'] %}

{% block form_inner %}
    {{ block('form_widget') }}
    {{ block('form_actions') }}

    {% set formRest = form_rest(form) %}
{% endblock %}

{% block form_actions %}
    <div class="widget-actions form-actions">
        {% block form_actions_inner %}
            <button class="btn btn--outlined" type="reset">{{ 'Cancel'|trans }}</button>
            <button class="btn" type="submit">{{ 'Add Address'|trans }}</button>
        {% endblock %}
    </div>
{% endblock %}
