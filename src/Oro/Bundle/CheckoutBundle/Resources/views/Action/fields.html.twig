{% block _oro_action_operation_widget %}
    {% import '@OroUI/macros.html.twig' as UI %}

    <div class="grid checkout-form__address-form">
        {% if form.visitor_email is defined and form.visitor_email %}
            {% set emailField %}
                {{ form_row(form.visitor_email, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.email'|trans}}) }}
            {% endset %}
        {% endif %}

        {{ form_row(form.address, {
            emailField: emailField|default(null)
        }) }}

        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.save_address) }}
        </div>

        <div class="hidden">
            {{ form_widget(form._token) }}
        </div>
    </div>
{% endblock %}

{% block _oro_action_operation_address_row %}
    {% import '@OroUI/macros.html.twig' as UI %}
    <div class="grid grid-col-12 checkout-form__row">
        <p class="grid-col-12  required-label" aria-hidden="true"><span class="required-symbol">*</span> {{ 'oro.customer.form.label.required'|trans }}</p>
    </div>
    <div class="grid grid-col-12 checkout-form__row">
        {% if emailField is not null %}
            <div class="grid-col-6 grid-col-mobile-landscape-12">
                {{ emailField }}
            </div>
        {% endif %}
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.label, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.label'|trans}}) }}
        </div>
    </div>
    <div class="grid grid-col-12 checkout-form__row" {{ UI.attributes(form.vars.attr) }}>
        <div class="hidden">
            {{ form_widget(form.id) }}
            {{ form_widget(form.region_text) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.firstName, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.first_name'|trans}}) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.lastName, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.last_name'|trans}}) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.organization, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.organization'|trans}}) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.phone, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.phone'|trans}}) }}
        </div>
    </div>
    <div class="grid grid-col-12 checkout-form__row">
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.street, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.street'|trans}}) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.street2, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.street2'|trans}}) }}
        </div>
    </div>
    <div class="grid grid-col-12 checkout-form__row">
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.city, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.city'|trans}}) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.postalCode, {'attr' : {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.zip'|trans}}) }}
        </div>
    </div>
    <div class="grid grid-col-12 checkout-form__row">
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.region) }}
        </div>
        <div class="grid-col-6 grid-col-mobile-landscape-12">
            {{ form_row(form.country) }}
        </div>
    </div>
{% endblock %}
