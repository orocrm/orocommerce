{% block _checkout_button_continue_right_widget %}
    {% if transitionData is defined and transitionData %}
        {% import '@OroCheckout/layouts/default/layout.html.twig' as _layout %}
        <div class="order-checkout-widget">
            <button type="submit"
                    class="btn btn--block{% if not transitionData.isAllowed %} btn--disabled{% endif %} checkout__submit-btn"
                    {% if not transitionData.isAllowed %}disabled="disabled"{% endif %}
                    {{ _layout.transitionAttributes(transitionData, checkout) }}
                    {{ _layout.conditionMessages(transitionData) }}
            >
                {{- transitionData.transition.label|trans({},'workflows') -}}
            </button>
        </div>
    {% endif %}
{% endblock %}

{% block _checkout_button_back_right_widget %}
    {% if transitionData is defined and transitionData %}
        {% import '@OroCheckout/layouts/default/layout.html.twig' as _layout %}
        {% set attr = layout_attr_defaults(attr, {
            '~class': " checkout-form__back"
        }) %}
        <div {{ block('block_attributes') }}>
            {{ block_widget(block) }}
        </div>
    {% endif %}
{% endblock %}
