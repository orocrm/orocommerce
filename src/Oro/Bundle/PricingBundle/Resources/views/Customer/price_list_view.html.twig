{% import '@OroUI/macros.html.twig' as UI %}

<div class="price-lists">
    {% if priceLists is defined %}
        {% set entities = priceLists %}
        {% include '@OroPricing/PriceList/partial/list.html.twig'
            with {
                'fallback': fallback,
                'fallbackEntityTitle': fallbackEntityTitle|default(null),
                'entities': entities,
                'headLink': headLink|default(null),
                'scope': {entity: entity|default(null)}
            }
        %}
    {% else %}
        <div class="no-data">
            {{ "oro.pricing.no_price_lists"|trans }}
        </div>
    {% endif %}
</div>
