{% set pageComponentOptions = {
    'websitesSelector': '#' ~ websites.vars.id,
    'customersSelector': '#' ~ customers.vars.id,
    'dateSelector': '#' ~ date.vars.id
} %}

<div class="sidebar-items"
    data-page-component-module="oropricing/js/app/components/product-price-debug-sidebar-component"
    data-page-component-options="{{ pageComponentOptions|json_encode }}">
        {% if websites is defined %}<div class="websites">{{ form_row(websites) }}</div>{% endif %}
        {% if customers is defined %}<p></p><div class="customers">{{ form_row(customers) }}</div>{% endif %}
        {% if date is defined %}<p></p><div class="date">{{ form_row(date) }}</div>{% endif %}
        {% if showDetailedAssignmentInfo is defined %}<p></p><div class="show-detailed-assignment-info">{{ form_row(showDetailedAssignmentInfo) }}</div>{% endif %}
        {% if showFullUsedChain is defined %}<p></p><div class="show-full-used-chain">{{ form_row(showFullUsedChain) }}</div>{% endif %}
</div>
