        '~class': ' product-filters-sidebar sticky sticky--top',
        'data-sticky': {
            name: 'product-filters-sidebar'
        }
    }) %}

    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_product_grid_sidebar_filters__sidebar_filters_container_widget %}
